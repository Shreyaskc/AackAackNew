<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e4e4e4">
    <RelativeLayout 
        android:id="@+id/red1"
        android:visibility="gone"
        android:layout_height="20dp"
        android:layout_width="fill_parent"
        android:background="#FF0000"></RelativeLayout> 
        
        <RelativeLayout
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:background="@drawable/nav"
         > 
       <Button
            android:id="@+id/back"
             android:layout_width="wrap_content" 
             android:layout_height="wrap_content"
         android:layout_centerInParent="true"
         android:layout_marginLeft="5dp"
             android:layout_alignParentLeft="true"
            android:background="@drawable/leftarrow" />
         
          <ImageView 
              android:id="@+id/logo"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/logo"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/back"
            android:layout_centerInParent="true"
            android:layout_marginRight="2dp"
            />
          <TextView 
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:text="aack"
              android:id="@+id/header"
              android:textSize="22dp"
              android:layout_centerHorizontal="true"
              android:layout_centerInParent="true"
              android:textColor="#000000"
              />

          <Button 
              android:visibility="gone"
              android:id="@+id/delete"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:background="@drawable/delete_btn"
              android:layout_alignParentRight="true"
              android:layout_centerHorizontal="true"
              android:layout_centerVertical="true"     
              android:layout_marginRight="20dp" />
          
           <RelativeLayout
    android:visibility="gone"
    android:id="@+id/henlayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"     
    android:layout_marginRight="10dp"   
    android:background="@drawable/hen"
     >    
<TextView    
    android:id="@+id/hen"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="23"
    android:textColor="#ffffff"
    android:textSize="12sp"
    android:layout_centerInParent="true"    
     /> 
</RelativeLayout>    
       <TextView
           android:visibility="invisible"
        android:id="@+id/folltext"
        android:textColor="#000000"
        android:textSize="8sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    	android:layout_marginRight="5dp"
    	android:layout_marginTop="5dp"
    	android:layout_alignParentRight="true"
        android:layout_below="@+id/henlayout"
        android:text="FOLLOWING" />
          
        </RelativeLayout>
    <!--  <RelativeLayout 
        android:layout_height="10dp"
        android:layout_width="fill_parent"
        android:background="#e92727"></RelativeLayout> -->
        <RelativeLayout 
            android:layout_below="@+id/top"
            android:id="@+id/top2"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:background="#bb0000">
            <ImageView 
                android:layout_marginLeft="5dp"
                android:id="@+id/image"
                android:layout_centerInParent="true"
                android:layout_marginTop="2dp"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:background="@drawable/default_profilepic"
                android:layout_alignParentLeft="true"
               />
            <LinearLayout
                android:weightSum="1" 
                android:id="@+id/center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/imagelast_totallayout"
                android:layout_toRightOf="@+id/image"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="5dp">
                <TextView 
                    android:textColor="#222222"
                    android:textSize="20dp"
               
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text=""
                    android:singleLine="true"
                    android:id="@+id/title"/>
                 <TextView 
                     android:layout_marginLeft="5dp"
                    android:textColor="#cccccc"
                    android:textSize="16dp"
                    
                    android:id="@+id/subname"
                    android:text=""
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                />
            </LinearLayout>
            <RelativeLayout 
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imagelast_totallayout">
            <RelativeLayout 
                android:visibility="gone"
                android:id="@+id/imagelast_reverse"
                android:layout_marginTop="0dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@drawable/img_1_newreverse">
                 <LinearLayout 
                     android:layout_marginTop="8dp"
                     android:layout_marginLeft="10dp"
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:orientation="vertical">
                <TextView 
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:text="+"
                     android:textStyle="bold"
                     android:layout_marginLeft="20dp"
                     android:id="@+id/count"
                     android:textSize="12dp"/>
                <TextView 
                    android:layout_marginTop="-5dp"
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:text="unfollow"
                     android:layout_marginLeft="2dp"
                     android:textStyle="bold"
                     android:id="@+id/unfollowtext"
                     android:textSize="12dp"/>
                </LinearLayout>
              
              
             </RelativeLayout>
             <RelativeLayout
               
              android:visibility="gone"
                android:id="@+id/imagelast"
                android:layout_marginTop="0dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                
                android:background="@drawable/img_1_new">
                 <LinearLayout 
                     android:layout_marginTop="8dp"
                     android:layout_marginLeft="8dp"
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:orientation="vertical">
                <TextView 
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:text="+"
                     android:textStyle="bold"
                     android:layout_marginLeft="15dp"
                     android:id="@+id/countnew"
                     android:textSize="12dp"/>
                <TextView 
                    android:layout_marginTop="-5dp"
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:text="follow"
                     android:textStyle="bold"
                     android:layout_marginLeft="2dp"
                     android:id="@+id/followtext"
                     android:textSize="12dp"/>
                </LinearLayout>
              
              
             </RelativeLayout></RelativeLayout>

        </RelativeLayout>
      
        <RelativeLayout 
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:id="@+id/text">
            <TextView 
                 android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Girl friend"
                android:textSize="16dp"
                android:id="@+id/conversation"
                android:layout_centerInParent="true"/>
            </RelativeLayout>
            <WebView
                android:layout_marginTop="0dp"
                android:id="@+id/web"
                android:layout_height="300dp"
                android:layout_width="fill_parent"/>
   
<LinearLayout
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:weightSum="1"
     >
<LinearLayout 
     android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_weight="0.2">
   <LinearLayout 
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:orientation="horizontal"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="10dp"
   >
<ImageView 
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:background="@drawable/artinsmall"
    />
<TextView 
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:id="@+id/userlikesnum"
    
     android:textSize="12dp"
   
     android:layout_marginLeft="5dp"
    />
   </LinearLayout>
   <LinearLayout 
 android:layout_width="fill_parent"
android:layout_height="wrap_content"
 android:orientation="horizontal"   
   android:layout_marginLeft="5dp"
    android:layout_marginTop="3dp" 
    android:layout_marginRight="2dp"  
       >
   <ImageView 
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:background="@drawable/chaticonsmall"
       />
  
   <TextView
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:layout_marginLeft="5dp"
       android:id="@+id/commentname1"
       android:orientation="vertical"
     
       />
        <TextView
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:layout_marginLeft="1dp"
       android:id="@+id/commentext1"
        android:textColor="#000000"
         android:singleLine="true"
       android:orientation="vertical"
       />
   
 
   </LinearLayout>
   <LinearLayout 
 android:layout_width="fill_parent"
android:layout_height="wrap_content"
 android:orientation="horizontal"   
   android:layout_marginLeft="5dp"
    android:layout_marginTop="3dp" 
    android:layout_marginRight="2dp"  
       >
   <ImageView 
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:visibility="invisible"
       android:background="@drawable/chaticonsmall"
       />
  
   <TextView
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:layout_marginLeft="5dp"
       android:id="@+id/commentname2"
       android:orientation="vertical"

       />
        <TextView
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:layout_marginLeft="1dp"
       android:id="@+id/commentext2"
       android:singleLine="true"
       android:textColor="#000000"
       android:orientation="vertical"
       />
   
 
   </LinearLayout>
   <LinearLayout 
 android:layout_width="fill_parent"
android:layout_height="wrap_content"
 android:orientation="horizontal"   
   android:layout_marginLeft="5dp"
   android:layout_marginBottom="2dp"
 
       >
   <TextView 
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:id="@+id/viewcoments"
       android:textSize="15sp"
         android:layout_marginLeft="19dp"
       />
 
   </LinearLayout>
   
   </LinearLayout>
    <LinearLayout 
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="20dp"
    android:gravity="center"
    android:layout_weight="0.8"
   >
<ImageView 
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:id="@+id/like"
    android:background="@drawable/like"
    />
<ImageView 
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:background="@drawable/comment"
    android:id="@+id/comment"
 android:layout_marginTop="6dp"
    />

<ImageView
                android:id="@+id/reaack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/reaacicon_gray" />
   </LinearLayout>
   
    
    
   </LinearLayout>
</LinearLayout>