<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MessageShareActivity" >

    <RelativeLayout
        android:id="@+id/red1"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:background="#FF0000" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/first"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/red1"
        android:background="@drawable/navbar" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:background="@drawable/leftarrow" />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/logo"
             />
            
             <ImageView
                android:id="@+id/iv_nav_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cancel"
                android:layout_marginLeft="15dp"
                   android:visibility="gone"  />
            
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="aack"
            android:textColor="#222222"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/henlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:visibility="gone"
           >
            
                <ImageView 
                android:id="@+id/ivshare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ok_btn"
                android:padding="5dp"/>
                
        </RelativeLayout>

      
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/red"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/first"
        android:background="#FF0000" >
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#cdcdcd"
        android:layout_below="@+id/red" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" 
            android:orientation="vertical"
           >
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="#cdcdcd"
                android:orientation="vertical"
                android:id="@+id/ll_selectpart"
               >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/text_bg" >

                    <EditText
                        android:id="@+id/caption"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="#eeeeee"
                        android:gravity="left"
                        android:hint="Write a caption...                                                        "
                        android:maxLines="4"
                        android:padding="5dp"
                        android:textColor="#797979"
                        android:textSize="16dp"
                        android:inputType="text|textCapSentences|textMultiLine"
                        android:scrollHorizontally="false"
                        android:singleLine="false"
                        android:maxLength="60" />
                </LinearLayout>

                <TextView
                    android:id="@+id/conversation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:text="Conversation from:"
                    android:textColor="#222222"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/chatting"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/text_bg"
                    android:gravity="left"
                    android:hint="Best Friend, BoyFriend, etcâ€¦"
                    android:padding="5dp"
                    android:maxLength="13"
                    android:singleLine="true"
                    android:textColor="#797979"
                    android:textSize="16dp"
                    android:inputType="text|textCapSentences" />

                <TextView
                    android:id="@+id/screenlook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:text="Screen look:"
                    android:textColor="#222222"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:weightSum="1"
                         >

                        <ImageView
                            android:id="@+id/ios"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/iphoneios7_new" 
                            android:layout_weight="0.5"/>

                        <ImageView
                            android:id="@+id/android"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/android_new"
                            android:layout_weight="0.5" />
                    </LinearLayout>
                </LinearLayout>
                
				<RelativeLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				      android:layout_marginTop="25dp">
				    
				    <ImageView 
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:id="@+id/iv_preview"
				        android:background="@drawable/preview_red"
				        android:layout_centerInParent="true"/>
				    
				</RelativeLayout>                
                
                </LinearLayout>

	<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
   android:background="#cdcdcd"	   
    android:orientation="vertical"
    android:id="@+id/ll_sharepart"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
   android:visibility="gone"
   >
                <TextView
                    android:id="@+id/shareto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:text="Public Share to AACKAACK and:"
                    android:textColor="#222222"
                    android:textSize="16dp" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center|center_horizontal"
                >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="2dp"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1" >

                            <ImageView
                                android:id="@+id/emailbtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/email"
                                android:layout_weight="0.5" />

                            <ImageView
                                android:id="@+id/twitterbtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/twitter"
                                android:layout_weight="0.5" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" 
                            android:weightSum="1">

                            <ImageView
                                android:id="@+id/tumblrbtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/tumblr"
                                 android:layout_weight="0.5" />

                            <ImageView
	                            android:id="@+id/facebookbtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/facebook" 
                                 android:layout_weight="0.5"/>
                            
                            
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                             android:weightSum="1" >
							
                           <ImageView
                                android:id="@+id/iv_imgur"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/imgur_off"
                                android:layout_weight="0.5" />
                            
                            <ImageView
                                android:id="@+id/iv_aack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/aackack_on" 
                                android:layout_weight="0.5"/>
                        </LinearLayout>
                        
                        <RelativeLayout 
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                             android:layout_marginTop="25dp"
                             android:id="@+id/rel_private"
                             >
                            
                      <TextView
         	           android:id="@+id/tv_private"
            	        android:layout_width="wrap_content"
                	    android:layout_height="wrap_content"
                    	android:layout_marginLeft="12dp"
                   	 	android:text="Private Save only to:"
                    	android:textColor="#222222"
                    	android:textSize="16dp" />
                          <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@+id/tv_private"
                            android:weightSum="1"
                             >

                            <ImageView
                                android:id="@+id/iv_gallery"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/gallery_off"
                                android:layout_weight="0.5" />

                            <ImageView
                                android:id="@+id/favbtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/fav4_on"
                                android:layout_weight="0.5" />
                        </LinearLayout>
                        </RelativeLayout>
                        
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="20dp" 
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_horizontal"
                        android:background="@drawable/share_big" />
                    
                    <ImageView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_cancel"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center|center_horizontal"
                        android:src="@drawable/cancel"/>
                </LinearLayout>
                
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <WebView
        android:id="@+id/webview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/red"
        android:visibility="gone" />
    
    
     <ProgressBar
        android:id="@+id/progress_dialog"
        android:layout_width="60px"
        android:layout_height="60px"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="70dp"
        android:background="@drawable/dialogback"
        android:visibility="gone" />

</RelativeLayout>